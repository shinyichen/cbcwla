<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <ImageButton
        android:id="@+id/sermon_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/ic_play_circle_outline_black_48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@null"/>

    <TextView
        android:id="@+id/sermon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/sermon_play_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sermon_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/sermon_title"
        android:layout_toEndOf="@id/sermon_play_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sermon_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/sermon_title"
        android:layout_toEndOf="@id/sermon_author"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />


</RelativeLayout>